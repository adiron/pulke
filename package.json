{
  "name": "pulke",
  "version": "0.1.0",
  "description": "A simple data-driven animation library",
  "main": "src/Pulke.ts",
  "scripts": {
    "dev": "webpack-dev-server --progress",
    "dev:prod": "NODE_ENV='production' webpack-dev-server --progress",
    "build": "webpack",
    "build:library": "mkdir -p ./dist/lib/ && node buildLibrary.js > ./dist/lib/pulke.js && npx uglifyjs ./dist/lib/pulke.js > ./dist/lib/pulke.min.js",
    "build:prod": "NODE_ENV='production' webpack --progress",
    "upload": "./upload.sh",
    "deploy": "npm run build:prod && npm run upload",
    "test": "mocha -r ts-node/register test.ts"
  },
  "author": "Adi Ron",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/mocha": "^2.2.46",
    "browserify": "^15.0.0",
    "chai": "^4.1.2",
    "css-loader": "^0.28.7",
    "html-webpack-plugin": "^2.30.1",
    "html-webpack-pug-plugin": "^0.2.1",
    "immutability-helper": "^2.5.0",
    "jade": "^1.11.0",
    "jade-loader": "^0.8.0",
    "mocha": "^4.1.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "ts-node": "^4.1.0",
    "tsify": "^3.0.4",
    "uglify-js": "^3.3.4",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "dependencies": {
    "@types/bezier-easing": "^2.0.0",
    "bezier-easing": "^2.0.3",
    "typescript": "^2.6.2",
    "ts-loader": "^3.2.0"
  }
}
